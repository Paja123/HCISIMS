<Window x:Class="InitialProject.View.GuideViews.CommentPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.View.GuideViews"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="CommentPopUp" Height="350" Width="500"
        WindowStartupLocation ="CenterScreen" FontSize="40">

    <Grid>
        <Grid.Style>
            <Style>
                <Setter Property="TextBlock.FontSize" Value="40"/>
                <Setter Property="Button.FontSize" Value="40"></Setter>
            </Style>
        </Grid.Style>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" x:Name="TextBlock" Width="480" Height="270" TextWrapping="Wrap"></TextBlock>

        <Button Grid.Row="1" Background="Green" Foreground="White" BorderThickness="3" BorderBrush="Black" Height="48"
                Width="130" HorizontalAlignment="Right" Click="ButtonBase_OnClick"
                Margin="0,0,20,0">
            <TextBlock Text="zatvori" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        </Button>

    </Grid>
</Window>
