<UserControl x:Class="InitialProject.View.GuideViews.CommentDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InitialProject.View.GuideViews"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="350" d:DesignWidth="500">
    <Grid>
        <Grid.Style>
            <Style>
                <Setter Property="TextBlock.FontSize" Value="35"/>
                <Setter Property="Button.FontSize" Value="30"></Setter>
            </Style>
        </Grid.Style>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" x:Name="TextBlock"></TextBlock>

        <Button Grid.Row="1" Content="zatvori" Width="100" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="370,0,0,0" Height="44" VerticalAlignment="Top" Click="Button_Click"/>
    </Grid>
</UserControl>
