<Window x:Class="InitialProject.View.Guide.MonthlyRequests"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.View.Guide"
        mc:Ignorable="d"
        Title="MonthlyRequests" Height="450" Width="300">
    <Grid>
        <DataGrid   SelectionMode="Single" ItemsSource="{Binding Requests}" AutoGenerateColumns="False" IsReadOnly="True" Margin="0, 48, 0, 0" VerticalAlignment="Top">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Month" Binding="{Binding Month}"/>
                <DataGridTextColumn Header="Num. of req." Binding="{Binding Count}"/>
            </DataGrid.Columns>
            </DataGrid>
    </Grid>
</Window>
